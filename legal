    <script>
        // Mobile menu toggle
        document.getElementById('menu-btn').addEventListener('click', function() {
            document.getElementById('mobile-menu').classList.toggle('hidden');
        });

        // Tab switching functionality
        function showTab(tabName) {
    // Hide all content
    document.getElementById('privacy-content').classList.add('hidden');
    document.getElementById('terms-content').classList.add('hidden');
    document.getElementById('gdpr-content').classList.add('hidden');
    
    // Remove active class from all tabs
    document.getElementById('privacy-tab').classList.remove('active');
    document.getElementById('terms-tab').classList.remove('active');
    document.getElementById('gdpr-tab').classList.remove('active');

    // Show selected content and mark tab as active
    document.getElementById(tabName + '-content').classList.remove('hidden');
    document.getElementById(tabName + '-tab').classList.add('active');

    // Scroll to the top of the content area
    document.getElementById(tabName + '-content').scrollIntoView({ behavior: 'smooth', block: 'start' });
    
    // Also scroll the window to the top of the legal content section
    document.querySelector('.legal-section').scrollIntoView({ behavior: 'smooth', block: 'start' });

    // Update URL hash
    window.location.hash = tabName;
}

       
// Listen for hash on page load
window.addEventListener('DOMContentLoaded', () => {
    const hash = window.location.hash.substring(1); // removes #
    const validTabs = ['privacy', 'terms', 'gdpr'];
    if (validTabs.includes(hash)) {
        showTab(hash);
    } else {
        // Default tab to show if none selected
        showTab('privacy');
    }
});
    </script>
</body>
